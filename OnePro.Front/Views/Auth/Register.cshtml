@{
    ViewData["Title"] = "Register";
    var bgSvg = "https://login.idaman.pertamina.com/assets/images/background.svg";
    var logoPng = "https://login.idaman.pertamina.com/common/images/logo.png";
}

<div class="min-h-screen relative overflow-hidden"
     style="background: linear-gradient(180deg, #f6f7ff 0%, #eef0ff 100%);">

    <div class="relative z-10 min-h-screen flex items-center justify-center px-4 py-6">
        <!-- Main card (lebih kecil) -->
        <div class="w-full max-w-5xl bg-white/90 backdrop-blur rounded-3xl shadow-xl overflow-hidden">
            <div class="grid grid-cols-1 lg:grid-cols-2">
                
                <!-- LEFT: Form -->
                <div class="p-6 sm:p-8">
                    <div class="flex items-center gap-3 mb-6">
                        <img src="@logoPng" alt="Pertamina" class="h-7 w-auto" />
                    </div>

                    <div class="mb-6">
                        <h1 class="text-lg sm:text-xl font-semibold text-slate-800">
                            Create your account
                        </h1>
                        <p class="text-sm text-slate-500 mt-1">
                            Register to access RIC Portal
                        </p>
                    </div>

                    <form asp-controller="Auth" asp-action="Register" method="post" class="space-y-4">
                        @Html.AntiForgeryToken()

                        <!-- Name -->
                        <div>
                            <label class="block text-xs font-medium text-slate-700 mb-1.5">Full Name</label>
                            <input name="name" type="text" placeholder="Your full name"
                                   class="w-full rounded-xl border border-slate-200 px-4 py-2.5 text-sm
                                          focus:outline-none focus:ring-4 focus:ring-indigo-100 focus:border-indigo-400"
                                   required />
                        </div>

                        <!-- Email -->
                        <div>
                            <label class="block text-xs font-medium text-slate-700 mb-1.5">Email</label>
                            <input name="email" type="email" placeholder="you@example.com"
                                   class="w-full rounded-xl border border-slate-200 px-4 py-2.5 text-sm
                                          focus:outline-none focus:ring-4 focus:ring-indigo-100 focus:border-indigo-400"
                                   required />
                        </div>

                        <!-- Password -->
                        <div>
                            <label class="block text-xs font-medium text-slate-700 mb-1.5">Password</label>
                            <input name="password" type="password" placeholder="••••••••"
                                   class="w-full rounded-xl border border-slate-200 px-4 py-2.5 text-sm
                                          focus:outline-none focus:ring-4 focus:ring-indigo-100 focus:border-indigo-400"
                                   required />
                            <p class="text-[11px] text-slate-500 mt-1">
                                Min. 8 karakter
                            </p>
                        </div>

                        <!-- Terms -->
                        <div class="flex items-start gap-2 pt-1">
                            <input type="checkbox" required
                                   class="mt-0.5 h-4 w-4 rounded border-slate-300 text-indigo-600 focus:ring-indigo-200" />
                            <span class="text-xs text-slate-700">
                                I agree to the Terms & Privacy Policy
                            </span>
                        </div>

                        <!-- Action -->
                        <div class="flex items-center justify-between pt-2">
                            <a href="/Auth/Login"
                               class="text-xs font-semibold text-slate-600 hover:text-slate-800">
                                ← Back
                            </a>

                            <button type="submit"
                                    class="rounded-xl bg-indigo-600 px-6 py-2.5 text-sm font-semibold text-white
                                           hover:bg-indigo-700 transition shadow-md shadow-indigo-200">
                                Create Account
                            </button>
                        </div>

                    </form>
                </div>

                <!-- RIGHT -->
                <div class="relative hidden lg:block">
                    <div class="absolute inset-0 bg-gradient-to-br from-indigo-50 to-white"></div>
                    <div class="absolute inset-0"
                         style="background-image:url('@bgSvg'); background-repeat:no-repeat; background-size:cover; background-position:center;">
                    </div>
                    <div class="absolute inset-0 bg-white/40"></div>
                </div>
            </div>
        </div>
    </div>
</div>
