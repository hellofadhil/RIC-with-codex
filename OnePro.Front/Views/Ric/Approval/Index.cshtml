@using OnePro.Front.Models
@using OnePro.Front.Helpers
@using Core.Models.Enums

@model List<RicItemResponse>

@{
    ViewData["Title"] = "RIC Approval";
    Layout = "_LayoutDashboard";

    var total = Model?.Count ?? 0;
}

<div class="max-w-6xl mx-auto mt-6">

    <!-- HEADER -->
    <div class="mt-8">
        <div class="bg-white rounded-2xl border border-gray-200/80 p-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div>
                    <h1 class="text-xl font-semibold text-gray-900 tracking-tight">RIC Approval</h1>
                    <p class="text-sm text-gray-500 mt-1">Daftar RIC yang masuk tahap approval. Pilih satu buat approve.</p>
                </div>

                <a asp-action="UserIndex"
                   class="@BtnGhost()">
                    <i class="ri-arrow-left-line text-lg"></i>
                    Back to My RIC
                </a>
            </div>
        </div>
    </div>

    <!-- TOOLBAR -->
    <div class="mt-6 bg-white rounded-2xl border border-gray-200/80 p-5">
        <div class="flex flex-col md:flex-row md:items-end gap-4">

            <div class="flex-1">
                <label class="text-xs text-gray-500">Search (judul / user / id)</label>
                <div class="relative mt-1">
                    <i class="ri-search-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    <input id="ricSearch"
                           type="text"
                           placeholder="Cari judul, user, atau ID..."
                           class="@InputBase("pl-10")" />
                </div>
            </div>

            <div class="w-full md:w-72">
                <label class="text-xs font-medium text-gray-600">Filter Status (Approval)</label>
                <div class="relative mt-1">
                    <i class="ri-filter-3-line absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none"></i>

                    <select id="statusFilter"
                            class="w-full appearance-none pl-10 pr-9 py-2.5 rounded-xl border border-gray-200 bg-white text-sm
                                   focus:outline-none focus:ring-2 focus:ring-gray-900/10 hover:border-gray-300 transition">
                        <option value="">All</option>
                        <option value="@StatusRic.Approval_Manager_User">@StatusRic.Approval_Manager_User</option>
                        <option value="@StatusRic.Approval_VP_User">@StatusRic.Approval_VP_User</option>
                        <option value="@StatusRic.Approval_Manager_BR">@StatusRic.Approval_Manager_BR</option>
                        <option value="@StatusRic.Approval_Manager_SARM">@StatusRic.Approval_Manager_SARM</option>
                        <option value="@StatusRic.Approval_VP_SARM">@StatusRic.Approval_VP_SARM</option>
                        <option value="@StatusRic.Approval_Manager_ECS">@StatusRic.Approval_Manager_ECS</option>
                        <option value="@StatusRic.Approval_VP_ECS">@StatusRic.Approval_VP_ECS</option>
                    </select>

                    <i class="ri-arrow-down-s-line absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none"></i>
                </div>
            </div>

            <button id="clearFilter"
                    type="button"
                    class="@BtnGhost()">
                <i class="ri-refresh-line"></i>
                Reset
            </button>
        </div>
    </div>

    <!-- TABLE -->
    <div class="mt-6 bg-white rounded-2xl border border-gray-200/80 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full text-sm">
                <thead class="bg-gray-50/60 text-gray-500 uppercase text-xs">
                    <tr>
                        <th class="px-6 py-4 text-left w-40">ID</th>
                        <th class="px-2 py-4 text-left">Judul</th>
                        <th class="px-2 py-4 text-left">User PIC</th>
                        <th class="px-6 py-4 text-left w-56">Status</th>
                        <th class="px-2 py-4 text-left w-44">Last Update</th>
                        <th class="px-6 py-4 text-center w-44">Action</th>
                    </tr>
                </thead>

                <tbody id="ricTableBody" class="divide-y divide-gray-100">
                    @if (Model?.Any() == true)
                    {
                        foreach (var item in Model)
                        {
                            var status = item.Status ?? "";

                            <tr class="hover:bg-gray-50 transition"
                                data-status="@status"
                                data-search="@BuildSearch(item)">

                                <td class="px-6 py-4 font-mono text-xs text-gray-500">
                                    <div class="truncate max-w-[7rem]" title="@item.Id">@item.Id</div>
                                </td>

                                <td class="px-2 py-4">
                                    <div class="font-medium text-gray-900 leading-snug" title="@item.Judul">
                                        @Trunc(item.Judul, 60)
                                    </div>
                                </td>

                                <td class="px-2 py-4 text-gray-700">
                                    <div class="truncate max-w-[9rem]">
                                        @item.UserName
                                    </div>
                                </td>

                                <td class="px-6 py-4">
                                    <span class="@($"{GetApprovalBadgeClass(status)} inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium")">
                                        @status
                                    </span>
                                </td>

                                <td class="px-2 py-4 text-xs text-gray-500">
                                    <div class="inline-flex items-center gap-2">
                                        <i class="ri-time-line text-gray-400"></i>
                                        @item.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                </td>

                                <td class="px-6 py-4">
                                    <div class="flex items-center justify-center gap-2">
                                        <a asp-action="Approval" asp-route-id="@item.Id"
                                           class="inline-flex items-center gap-2 rounded-xl bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 text-xs font-semibold transition"
                                           title="Open Approval">
                                            <i class="ri-shield-check-line text-base"></i>
                                            Approval
                                        </a>
                                    </div>
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center">
                                <div class="flex flex-col items-center justify-center gap-2">
                                    <div class="w-14 h-14 rounded-2xl bg-gray-50 border border-gray-200 flex items-center justify-center">
                                        <i class="ri-inbox-line text-3xl text-gray-300"></i>
                                    </div>
                                    <p class="text-gray-700 font-semibold">Belum ada RIC yang perlu di-approve.</p>
                                    <p class="text-gray-500 text-sm">Kalau udah masuk approval stage, bakal muncul rapi di sini ðŸ˜‰</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="px-6 py-4 border-t border-gray-100 text-xs text-gray-500 flex items-center justify-between">
            <span class="inline-flex items-center gap-2">
                <i class="ri-information-line"></i>
                Gunakan search & filter untuk mempercepat pencarian.
            </span>

            <span class="font-medium">
                Showing <span id="shownCount">@total</span> of @total
            </span>
        </div>
    </div>
</div>

@section Scripts {
<script>
(function () {
  const searchInput = document.getElementById('ricSearch');
  const statusFilter = document.getElementById('statusFilter');
  const clearBtn = document.getElementById('clearFilter');
  const tbody = document.getElementById('ricTableBody');
  const shownCount = document.getElementById('shownCount');

  if (!searchInput || !statusFilter || !clearBtn || !tbody) return;

  const rows = Array.from(tbody.querySelectorAll('tr[data-search]'));

  function applyFilter() {
    const q = (searchInput.value || '').trim().toLowerCase();
    const s = (statusFilter.value || '').trim();

    let visible = 0;

    rows.forEach(r => {
      const hay = (r.getAttribute('data-search') || '');
      const st = (r.getAttribute('data-status') || '');
      const show = (!q || hay.includes(q)) && (!s || st === s);

      r.style.display = show ? '' : 'none';
      if (show) visible++;
    });

    if (shownCount) shownCount.textContent = visible;
  }

  searchInput.addEventListener('input', applyFilter);
  statusFilter.addEventListener('change', applyFilter);
  clearBtn.addEventListener('click', () => {
    searchInput.value = '';
    statusFilter.value = '';
    applyFilter();
  });

  applyFilter();
})();
</script>
}

@functions {
    private string Trunc(string? text, int max)
    {
        if (string.IsNullOrWhiteSpace(text)) return "-";
        return text.Length > max ? text.Substring(0, max) + "..." : text;
    }

    private string BuildSearch(RicItemResponse item)
    {
        var parts = $"{item.Id} {item.Judul} {item.UserName} {item.Status}";
        return parts.ToLowerInvariant();
    }

    private string InputBase(string extra = "")
        => $"w-full {extra} pr-3 py-2.5 rounded-xl border border-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-900/10 text-sm";

    private string BtnGhost()
        => "inline-flex items-center gap-2 px-4 py-2.5 rounded-xl border border-gray-200 text-sm text-gray-700 hover:bg-gray-50 transition";

    private string GetApprovalBadgeClass(string status)
    {
        // khusus approval stage (lebih rapi + konsisten)
        return status switch
        {
            "Approval_Manager_User" => "bg-amber-100 text-amber-700 border border-amber-200",
            "Approval_VP_User"      => "bg-orange-100 text-orange-700 border border-orange-200",
            "Approval_Manager_BR"   => "bg-indigo-100 text-indigo-700 border border-indigo-200",
            "Approval_Manager_SARM" => "bg-purple-100 text-purple-700 border border-purple-200",
            "Approval_VP_SARM"      => "bg-fuchsia-100 text-fuchsia-700 border border-fuchsia-200",
            "Approval_Manager_ECS"  => "bg-sky-100 text-sky-700 border border-sky-200",
            "Approval_VP_ECS"       => "bg-blue-100 text-blue-700 border border-blue-200",
            _                       => "bg-gray-100 text-gray-700 border border-gray-200"
        };
    }
}
